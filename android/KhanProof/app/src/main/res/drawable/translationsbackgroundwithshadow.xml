<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape
            android:shape="rectangle">
            <solid android:color="@color/fadedblack" />
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <item android:right="1dp" android:left="1dp" android:bottom="2dp" android:top="1dp">
        <shape
            android:shape="rectangle">
            <gradient
                android:startColor="@color/translationsBackgroundStart"
                android:endColor="@color/translationsBackgroundEnd"
                />
            <corners android:radius="8dp"/>
        </shape>
    </item>
</layer-list>