<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/progressbar"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/securepoints"
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:layout_weight="1"
            android:background="@drawable/securepointsprogress"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="200 (+200)"
            android:textColor="@android:color/background_light"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/potentialpoints"
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:layout_weight="1"
            android:background="@drawable/potentialpointsbackground"
            android:gravity="center_vertical"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/pointstoleftlevel"
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:layout_weight="1"
            android:background="@drawable/pointsleftbackground"
            android:gravity="center_vertical" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lowerlevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:paddingTop="4dp"
            android:text="Level 3"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/higherlevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="5dp"
            android:paddingTop="4dp"
            android:text="Level 4"
            android:textAlignment="viewEnd"
            android:textSize="9dp" />
    </LinearLayout>

</LinearLayout>